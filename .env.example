# AIVMS Backend - Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this

# Database
DB_PATH=/app/data/recordings.db

# Storage
STORAGE_PATH=/app/storage/recordings
RETENTION_DAYS=7

# Detection Settings
DETECTION_MODEL=yolo11m
DETECTION_FPS=5.0
CONFIDENCE_THRESHOLD=0.5
USE_GPU=false

# MediaMTX
MEDIAMTX_API_URL=http://mediamtx:5555

# NVR Configuration
NVR_IP=YOUR_NVR_IP

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/aivms.log
